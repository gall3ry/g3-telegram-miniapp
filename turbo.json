{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "experimentalUI": true,
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    },
    "worker:dev": {
      "dependsOn": ["^dev"]
    },
    "db:generate": {
      "cache": false
    },
    "db:deploy": {
      "cache": false
    },
    "db:migrate": {
      "cache": false,
      "interactive": true
    }
  },
  "globalEnv": [
    "VERCEL_URL",
    "NODE_ENV",
    "SKIP_ENV_VALIDATION",
    "DATABASE_URL",
    "JWT_SECRET",
    "PORT"
  ]
}
